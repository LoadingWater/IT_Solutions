<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartingScreenFragment">


    <Button
        android:id="@+id/goShopping_fss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_shopping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userLists_fss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/your_lists"
        app:layout_constraintEnd_toEndOf="@+id/goShopping_fss"
        app:layout_constraintStart_toStartOf="@+id/goShopping_fss"
        app:layout_constraintTop_toBottomOf="@+id/goShopping_fss" />

</androidx.constraintlayout.widget.ConstraintLayout>